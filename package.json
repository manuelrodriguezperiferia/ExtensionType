{
  "name": "chatdevopsts",
  "displayName": "ChatdevopsTS",
  "description": "Extension Chatbot OpenAI del area de DevOps [Periferia] en typescript",
  "publisher": "ChatdevopsTS",
  "icon": "img/chat_small.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand: chatdevops.StartChat",
    "onView:chat-sidebar.views"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
			"activitybar": [
				{
					"id": "chat-sidebar",
					"title": "chatdevops",
					"icon": "img/chat_small.svg"
				}
			]
		},
		"views": {
			"chat-sidebar": [
				{
					"type": "webview",
					"id": "chat-sidebar.view",
					"name": "chatdevops",
					"icon": "img/chat_small.svg",
					"contextualTitle": "chatdevops"
				}
			]
		},
    "commands": [
      {
        "command": "chatdevops.StartChat",
        "title": "StartChat"
      },
      {
        "command": "chatdevopsts.helloWorld",
        "title": "HelloWorld"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/manuelrodriguezperiferia/ExtensionType.git"
  },
  "license":"License.txt"
}
